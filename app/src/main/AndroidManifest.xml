<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="dev.aaa1115910.glyphrecorder.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlyphRecorder">
        <activity
            android:name="dev.aaa1115910.glyphrecorder.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GlyphRecorder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:enabled="true"
            android:exported="true"
            android:multiprocess="false"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL" />
        <activity
            android:name="dev.aaa1115910.glyphrecorder.activities.CorrectionActivity"
            android:exported="false"
            android:label="@string/activity_title_correction"
            android:theme="@style/Theme.GlyphRecorder" />
        <service
            android:name="dev.aaa1115910.glyphrecorder.services.MediaProjectionService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />
    </application>

</manifest>